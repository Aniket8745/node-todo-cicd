<!DOCTYPE html>
<html lang="en">
<head>
    <title>Todo List App</title>
    <style>
        /* Basic Page Setup */
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f0f2f5;
            color: #333;
            margin: 0;
            padding: 0;
            line-height: 1.6;
        }

        /* Header */
        h1 {
            background-color: #ff6f61;
            color: white;
            margin: 0;
            padding: 20px;
            text-align: center;
            border-bottom: 3px solid #ff3b30;
        }

        /* Todo List */
        .todolist {
            max-width: 600px;
            margin: 30px auto;
            padding: 0;
            list-style: none;
        }

        .todolist li {
            background: #ffffff;
            border: 1px solid #ccc;
            border-radius: 8px;
            margin-bottom: 15px;
            padding: 20px;
            position: relative;
            transition: box-shadow 0.3s ease;
        }

        .todolist li:hover {
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        /* Action Buttons */
        .action-btn {
            position: absolute;
            top: 10px;
            cursor: pointer;
            font-size: 20px;
        }

        .delete-btn {
            color: #e74c3c;
            right: 10px;
        }

        .edit-btn {
            color: #f39c12;
            right: 45px;
        }

        .action-btn:hover {
            transform: scale(1.3);
        }

        /* Form */
        .todo-form {
            background: #ffffff;
            border: 1px solid #ccc;
            border-radius: 8px;
            padding: 25px;
            max-width: 600px;
            margin: 20px auto;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .todo-form label {
            display: block;
            margin-bottom: 15px;
            font-weight: bold;
            color: #333;
        }

        .todo-form input[type="text"] {
            width: 100%;
            padding: 12px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 8px;
        }

        .todo-form input[type="submit"] {
            background-color: #3498db;
            color: white;
            border: none;
            border-radius: 8px;
            padding: 12px 25px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .todo-form input[type="submit"]:hover {
            background-color: #2980b9;
        }
    </style>
</head>
<body>
    <h1>Todo List - Manage Your Tasks</h1>

    <!-- Todo List -->
    <ul class="todolist">
        <% todolist.forEach(function(todo, index) { %>
        <li>
            <a href="/todo/delete/<%= index %>" class="action-btn delete-btn">✘</a>
            <a href="/todo/<%= index %>" class="action-btn edit-btn">✎</a>
            <%- todo %>
        </li>
        <% }); %>
    </ul>

    <!-- Add Todo Form -->
    <form action="/todo/add/" method="post" class="todo-form">
        <label for="newtodo">What should I do?</label>
        <input type="text" name="newtodo" id="newtodo" autofocus placeholder="Enter a new task" />
        <input type="submit" value="Add" />
    </form>
</body>
</html>
